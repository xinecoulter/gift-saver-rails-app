<div class="span12">
<h1 class="text-left">Welcome, <%= @user.first_name %>!</h1>
</div>

<div class="span12">
  <div class="span6">
    <% if @recipients.any? %>
      <h2>Gift Recipients</h2>
      <ul>
        <% @recipients.each do |recipient| %>
          <li>
            <%= link_to recipient.name, "/users/#{@user.username}/recipients/#{recipient.id}" %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <h2>You have no gift recipients</h2>
    <% end %>
    <a href="/users/<%= @user.username %>/recipients/new" class="btn">Create a new recipient</a></div>
  </div>

  <div class="span6">
    <% if @gifts.any? %>
      <h2>Potential Gifts</h2>
      <ul>
        <% @gifts.each do |gift| %>
          <li>
            <%= link_to gift.name, "/users/#{@user.username}/gifts/#{gift.id}" %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <h2>You have no potential gifts</h2>
    <% end %>
    <a href="/users/<%= @user.username %>/gifts" class="btn">Find gifts</a>
  </div>

</div>