<h1>Welcome, <%= @user.first_name %>!</h1>

<a href="/users/<%= @user.username %>/edit">Change account settings</a>
<form action="/users/<%= @user.username %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <button>Delete Account</button>
</form>

<% if @recipients.any? %>
  <h2>Gift Recipients:</h2>
  <ul>
    <% @recipients.each do |recipient| %>
      <li>
        <%= link_to recipient.name, "/users/#{@user.username}/recipients/#{recipient.id}" %>
      </li>
    <% end %>
  </ul>
<% else %>
  <h2>You have no gift recipients</h2>
<% end %>

<% if @gifts.any? %>
  <h2>Potential Gifts:</h2>
  <ul>
    <% @gifts.each do |gift| %>
      <li>
        <%= link_to gift.name, "/users/#{@user.username}/gifts/#{gift.id}" %>
      </li>
    <% end %>
  </ul>
<% else %>
  <h2>You have no potential gifts</h2>
<% end %>

<a href="/users/<%= @user.username %>/recipients/new">Create a new recipient</a><br/>

<a href="/users/<%= @user.username %>/gifts">Find gifts</a>