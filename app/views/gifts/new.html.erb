<%= render partial: "shared/navbar" %>

<div class="brown-div">
<h1>Search for a gift</h1>
</div>

<form action="/users/<%= @user.username %>/gifts/new" method="get">
  <select name="category">
    <% @categories.each do |category| %>
      <option value="<%= category %>">
        <%= category %>
      </option>
    <% end %>
  </select>
  <input type="string" name="name" />
  <button>Search</button>
</form>

<div class="blue-div">
<% unless @results.nil? %>
  <h3>You searched for "<%= params[:name] %>"</h3>
  <h4>Showing <%= @results.count %> results</h4>
  <ol>
    <% @results.each do |result| %>
      <li>
        <a href="/users/<%= @user.username %>/gifts/search/<%= result.asin %>"><%= result.item_attributes.title %></a><br/>
      </li>
    <% end %>
  </ol>
<% end %>
</div>