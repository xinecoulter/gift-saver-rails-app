<!-- Change Gift Recipient -->
<form action="/users/<%= @user.username %>/gifts/<%= @gift.id %>" method="post">
  <p>
    <label>Change gift recipient</label>
    <select name="new_recipient_id">
      <option value="<%= nil %>">---</option>
      <% @user.recipients.each do |recipient| %>
        <option value="<%= recipient.id %>">
          <%= recipient.name %>
        </option>
      <% end %>
    </select>
  </p>
    <input type="hidden" name="_method" value="put" />
    <button class="btn">Update</button>
</form>

<!-- Delete Gift -->
<form action="/users/<%= @user.username %>/gifts/<%= @gift.id %>" method="post">
    <input type="hidden" name="_method" value="delete" />
    <button class="btn">Delete gift</button>
</form>