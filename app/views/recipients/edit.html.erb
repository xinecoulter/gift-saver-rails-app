<section class="span12 content">
  <header><h1>Update recipient</h1></header>

  <!-- Displays errors in updating a recipient -->
  <%= render partial: "error" %>

  <form action="/users/<%= @user.username %>/recipients/<%= @recipient.id %>" method="post">
    <p>
      <label for="name">Change name</label>
      <input type="string" name="name" value="<%= @recipient.name %>" autofocus="true"/>
    </p>
    <p>
      <label for="name">Change birthday</label>
      <input type="date" name="birthday" value="<%= @recipient.birthday %>" />
    </p>
    <p>
      <input type="hidden" name="_method" value="put" />
      <button class="btn">Submit</button>
    </p>
  </form>
</section>